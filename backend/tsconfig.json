{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "types": ["node", "mocha"]
  },
  "include": ["src", "test"]
}
